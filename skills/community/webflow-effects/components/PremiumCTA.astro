---
interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = "¿Listo para llevar tu logística al siguiente nivel?",
  subtitle = "Solicita una cotización gratuita y descubre cómo podemos optimizar tu cadena de suministro.",
  ctaText = "Solicitar cotización",
  ctaLink = "/contacto"
} = Astro.props;
---

<section class="relative py-24 overflow-hidden">
  {/* Background */}
  <div class="absolute inset-0 bg-gradient-to-br from-brand-600 via-brand-700 to-brand-800">
    {/* Animated gradient overlay */}
    <div class="absolute inset-0 opacity-30">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(255,255,255,0.2)_0%,transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(255,255,255,0.15)_0%,transparent_50%)]"></div>
    </div>
    
    {/* Pattern */}
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>
  </div>

  {/* Floating Elements */}
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <div class="absolute top-10 left-10 w-20 h-20 border border-white/20 rounded-full animate-float"></div>
    <div class="absolute bottom-20 right-20 w-32 h-32 border border-white/10 rounded-full animate-float-delayed"></div>
    <div class="absolute top-1/2 right-10 w-16 h-16 bg-white/10 rounded-full blur-xl"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      {/* Badge */}
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 backdrop-blur rounded-full text-white/90 text-sm mb-8 gsap-fade-up">
        <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
        Atención 24/7 en todo el mundo
      </div>

      {/* Title */}
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight gsap-fade-up">
        {title}
      </h2>

      {/* Subtitle */}
      <p class="text-xl text-brand-100 mb-10 max-w-2xl mx-auto gsap-fade-up">
        {subtitle}
      </p>

      {/* CTA Buttons */}
      <div class="flex flex-col sm:flex-row gap-4 justify-center gsap-fade-up">
        <a 
          href={ctaLink}
          class="group inline-flex items-center justify-center px-8 py-4 bg-white text-brand-700 font-bold rounded-xl hover:bg-brand-50 transition-all duration-300 shadow-2xl hover:shadow-white/25 hover:-translate-y-1"
        >
          {ctaText}
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a 
          href="tel:+1234567890"
          class="group inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white/30 text-white font-semibold rounded-xl hover:bg-white/10 hover:border-white/50 transition-all duration-300 backdrop-blur-sm"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Llamar ahora
        </a>
      </div>

      {/* Trust Indicators */}
      <div class="flex flex-wrap justify-center items-center gap-8 mt-12 text-white/80 text-sm gsap-fade-up">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Cotización en 24h
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Sin compromiso
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Soporte dedicado
        </div>
      </div>
    </div>
  </div>
</section>
