  {
    icon: 'airplane',
    title: 'Transporte Aéreo',
    description: 'Envíos urgentes internacionales con cobertura en 200+ países. Entregas express en 24-72 horas.',
    image: 'https://images.unsplash.com/photo-1436491865332-7a61a109cc05?w=800&q=80',
    features: ['Tracking GPS', 'Seguro incluido', 'Aduana express']
  },
  {
    icon: 'ship',
    title: 'Transporte Marítimo',
    description: 'FCL y LCL. Consolidación de carga para optimizar costos en envíos internacionales.',
    image: 'https://images.unsplash.com/photo-1494412574643-ff11b0a5c1c3?w=800&q=80',
    features: ['Contenedores 20/40ft', 'Carga refrigerada', 'Puertos globales']
  },
  {
    icon: 'truck',
    title: 'Transporte Terrestre',
    description: 'Nacional e internacional. Full truckload y servicios LTL para cualquier volumen.',
    image: 'https://images.unsplash.com/photo-1601584115197-04ecc0da31d7?w=800&q=80',
    features: ['Flota propia', 'GPS en tiempo real', 'Entregas just-in-time']
  },
  {
    icon: 'warehouse',
    title: 'Almacenamiento',
    description: 'Centros de distribución estratégicos con gestión de inventario digital.',
    image: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?w=800&q=80',
    features: ['Pick & pack', 'Inventario WMS', 'Cross-docking']
  }
