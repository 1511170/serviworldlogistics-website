---
interface Testimonial {
  quote: string;
  author: string;
  role: string;
  company: string;
  image: string;
  rating: number;
}

const testimonials: Testimonial[] = [
  {
    quote: "Serviworld redujo nuestros tiempos de entrega en 40%. Su equipo es profesional y siempre cumplen los plazos.",
    author: "Juan Pérez",
    role: "Director de Operaciones",
    company: "Importadora XYZ",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=200&q=80",
    rating: 5
  },
  {
    quote: "El mejor aliado logístico para nuestra expansión internacional. Confiable y eficiente en cada envío.",
    author: "María García",
    role: "CEO",
    company: "ABC Corp",
    image: "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=200&q=80",
    rating: 5
  },
  {
    quote: "Su almacenamiento y gestión de inventario nos ha permitido escalar sin preocupaciones.",
    author: "Carlos López",
    role: "Supply Chain Manager",
    company: "Distribuciones Sur",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=200&q=80",
    rating: 5
  }
];
---

<section class="py-24 bg-gray-50 relative overflow-hidden">
  {/* Background Elements */}
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-brand-200/30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-brand-300/20 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    {/* Section Header */}
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-2 bg-brand-100 text-brand-700 rounded-full text-sm font-semibold mb-4 gsap-fade-up">
        Testimonios
      </span>
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6 gsap-fade-up">
        Lo que dicen nuestros <span class="text-brand-600">clientes</span>
      </h2>
      <p class="text-xl text-gray-600 gsap-fade-up">
        Empresas que confían en nosotros para sus operaciones logísticas.
      </p>
    </div>

    {/* Testimonials Grid */}
    <div class="grid md:grid-cols-3 gap-8 gsap-stagger">
      {testimonials.map((testimonial) => (
        <div class="group relative">
          <div class="relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover-lift h-full flex flex-col">
            {/* Quote Icon */}
            <div class="absolute -top-4 left-8 w-10 h-10 bg-brand-500 rounded-full flex items-center justify-center shadow-lg">
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
              </svg>
            </div>

            {/* Rating */}
            <div class="flex gap-1 mb-4 pt-2">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>

            {/* Quote */}
            <blockquote class="text-gray-700 text-lg leading-relaxed mb-6 flex-grow">
              "{testimonial.quote}"
            </blockquote>

            {/* Author */}
            <div class="flex items-center gap-4 pt-6 border-t border-gray-100">
              <img 
                src={testimonial.image}
                alt={testimonial.author}
                class="w-14 h-14 rounded-full object-cover ring-4 ring-brand-50"
              />
              <div>
                <div class="font-bold text-gray-900">{testimonial.author}</div>
                <div class="text-sm text-gray-600">{testimonial.role}</div>
                <div class="text-sm text-brand-600 font-medium">{testimonial.company}</div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    {/* Trust Badges */}
    <div class="mt-16 pt-16 border-t border-gray-200">
      <p class="text-center text-gray-500 text-sm mb-8">Empresas que confían en nosotros</p>
      <div class="flex flex-wrap justify-center items-center gap-12 opacity-50 grayscale">
        <div class="text-2xl font-bold text-gray-400">DHL</div>
        <div class="text-2xl font-bold text-gray-400">FedEx</div>
        <div class="text-2xl font-bold text-gray-400">Maersk</div>
        <div class="text-2xl font-bold text-gray-400">UPS</div>
      </div>
    </div>
  </div>
</section>
