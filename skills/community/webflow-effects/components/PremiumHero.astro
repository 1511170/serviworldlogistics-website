---
interface Props {
  title: string;
  highlight: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  imageUrl?: string;
}

const { 
  title, 
  highlight, 
  subtitle, 
  ctaText = "Cotizar ahora",
  ctaLink = "/contacto",
  secondaryCtaText = "Conocer servicios",
  secondaryCtaLink = "/servicios",
  imageUrl = "https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?w=1200&q=80"
} = Astro.props;
---

<section class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-brand-900 via-brand-800 to-brand-700">
  {/* Background Gradient Orbs */}
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="gradient-orb orb-1"></div>
    <div class="absolute w-[300px] h-[300px] rounded-full blur-[100px] opacity-30 bg-gradient-to-br from-cyan-400 to-blue-600 bottom-20 left-10 animate-float-delayed"></div>
  </div>

  {/* Grid Pattern Overlay */}
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23ffffff\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      {/* Text Content */}
      <div class="text-white pt-20 lg:pt-0">
        <div class="hero-title">
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold leading-tight mb-6">
            {title}
            <span class="block text-brand-200">{highlight}</span>
          </h1>
        </div>
        
        <p class="hero-subtitle text-xl sm:text-2xl text-brand-100/90 mb-8 max-w-xl leading-relaxed">
          {subtitle}
        </p>

        <div class="hero-cta flex flex-wrap gap-4">
          <a 
            href={ctaLink}
            class="group inline-flex items-center px-8 py-4 bg-white text-brand-700 font-semibold rounded-xl hover:bg-brand-50 transition-all duration-300 shadow-xl hover:shadow-2xl hover:-translate-y-1"
          >
            {ctaText}
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          
          <a 
            href={secondaryCtaLink}
            class="inline-flex items-center px-8 py-4 border-2 border-white/30 text-white font-semibold rounded-xl hover:bg-white/10 transition-all duration-300 backdrop-blur-sm"
          >
            {secondaryCtaText}
          </a>
        </div>

        {/* Stats */}
        <div class="grid grid-cols-3 gap-8 mt-12 pt-12 border-t border-white/20">
          <div class="gsap-fade-up">
            <div class="text-3xl sm:text-4xl font-bold text-white">
              <span class="stat-number" data-value="200">200</span>+
            </div>
            <div class="text-brand-200 text-sm mt-1">Países</div>
          </div>
          <div class="gsap-fade-up">
            <div class="text-3xl sm:text-4xl font-bold text-white">
              <span class="stat-number" data-value="15">15</span>K+
            </div>
            <div class="text-brand-200 text-sm mt-1">Envíos/año</div>
          </div>
          <div class="gsap-fade-up">
            <div class="text-3xl sm:text-4xl font-bold text-white">
              <span class="stat-number" data-value="98">98</span>%
            </div>
            <div class="text-brand-200 text-sm mt-1">Satisfacción</div>
          </div>
        </div>
      </div>

      {/* Image */}
      <div class="relative hidden lg:block">
        <div class="relative gsap-scale-in">
          {/* Main Image */}
          <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img 
              src={imageUrl}
              alt="Servicios logísticos"
              class="w-full h-[500px] object-cover"
            />
            {/* Overlay gradient */}
            <div class="absolute inset-0 bg-gradient-to-t from-brand-900/50 to-transparent"></div>
          </div>

          {/* Floating Card */}
          <div class="absolute -bottom-6 -left-6 glass-card rounded-xl p-6 shadow-xl gsap-fade-up">
            <div class="flex items-center gap-4">
              <div class="w-12 h-12 bg-brand-500 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div>
                <div class="font-bold text-gray-900">Entrega garantizada</div>
                <div class="text-sm text-gray-600">Rastreo en tiempo real</div>
              </div>
            </div>
          </div>

          {/* Floating Card 2 */}
          <div class="absolute -top-4 -right-4 glass-card rounded-xl p-4 shadow-xl animate-float">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
              <div>
                <div class="font-bold text-gray-900">+40%</div>
                <div class="text-xs text-gray-600">Eficiencia</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Bottom Wave */}
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
    </svg>
  </div>
</section>
