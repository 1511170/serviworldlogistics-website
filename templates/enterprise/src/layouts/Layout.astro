---
import siteConfig from '../../config/site.config.ts';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = siteConfig.site.name,
  description = siteConfig.site.description 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={siteConfig.site.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    
    <!-- Skills inyectan aquÃ­ sus meta tags, schemas, scripts -->
    <slot name="head" />
    
    {siteConfig.site.favicon && (
      <link rel="icon" type="image/x-icon" href={siteConfig.site.favicon} />
    )}
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
