---
// Layout base mínimo - sin SEO ni extras
// Las skills pueden extender o reemplazar este layout
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- Skills pueden inyectar meta tags, schemas, etc. -->
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Reset mínimo - Tailwind se encarga del resto */
  *, *::before, *::after {
    box-sizing: border-box;
  }
  
  body {
    margin: 0;
    font-family: system-ui, -apple-system, sans-serif;
  }
</style>
