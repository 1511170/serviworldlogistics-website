---
import siteConfig from '../../config/site.config.ts';
import SEOHead from '../components/SEOHead.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  noindex?: boolean;
}

const {
  title = siteConfig.site.name,
  description = siteConfig.site.description,
  image,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  noindex = false,
} = Astro.props;

const navLinks = [
  { href: "/", label: "Inicio" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/servicios", label: "Servicios" },
  { href: "/contacto", label: "Contáctanos" },
];

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang={siteConfig.site.language} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <SEOHead
      title={title}
      description={description}
      image={image}
      type={type}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      author={author}
      noindex={noindex}
    />

    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-XTB8C8RL6R"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XTB8C8RL6R');
    </script>

    <!-- AI/LLM Discovery -->
    <link rel="alternate" type="text/plain" href="/llms.txt" title="LLM Information" />

    <!-- Fonts preloaded (self-hosted, defined in global.css) -->
    <link rel="preload" href="/fonts/roboto-latin.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/roboto-condensed-latin.woff2" as="font" type="font/woff2" crossorigin>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <slot name="head" />
    
    {siteConfig.site.favicon && (
      <link rel="icon" type="image/x-icon" href={siteConfig.site.favicon} />
    )}
  </head>
  <body class="font-body antialiased bg-white text-slate-900">
    <!-- Header -->
    <nav class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-md border-b border-slate-200 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-24">
          <!-- Logo -->
          <a href="/" class="flex items-center space-x-3 group">
            <img 
              src="/logo-new.webp" 
              alt="Serviworld Logistics - Empresa de logística internacional en Colombia" 
              class="h-14 w-auto object-contain transition-transform group-hover:scale-105"
            />
          </a>
          
          <!-- Desktop Nav -->
          <div class="hidden md:flex items-center space-x-10">
            <a 
              href="/"
              class={`font-bold text-sm uppercase tracking-wider transition-colors pb-1 border-b-2 ${
                currentPath === '/' 
                  ? 'text-primary border-accent' 
                  : 'text-slate-600 border-transparent hover:text-accent hover:border-accent'
              }`}
            >
              Inicio
            </a>
            <a 
              href="/nosotros"
              class={`font-bold text-sm uppercase tracking-wider transition-colors pb-1 border-b-2 ${
                currentPath === '/nosotros' 
                  ? 'text-primary border-accent' 
                  : 'text-slate-600 border-transparent hover:text-accent hover:border-accent'
              }`}
            >
              Nosotros
            </a>
            
            <!-- Servicios Dropdown -->
            <div class="relative group">
              <a 
                href="/servicios"
                class={`font-bold text-sm uppercase tracking-wider transition-colors pb-1 border-b-2 flex items-center gap-1 ${
                  currentPath.startsWith('/servicios') 
                    ? 'text-primary border-accent' 
                    : 'text-slate-600 border-transparent hover:text-accent hover:border-accent'
                }`}
              >
                Servicios
                <i class="fa-solid fa-chevron-down text-xs transition-transform group-hover:rotate-180"></i>
              </a>
              
              <!-- Dropdown Menu -->
              <div class="absolute top-full left-0 mt-2 w-72 bg-white shadow-2xl border-t-4 border-accent opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-2 group-hover:translate-y-0 z-50">
                <div class="py-2">
                  <a href="/servicios/transporte-maritimo/" class="block px-6 py-3 text-sm font-bold text-slate-700 hover:bg-slate-50 hover:text-accent transition-colors border-b border-slate-100">
                    <i class="fa-solid fa-ship mr-3 text-primary"></i>Transporte Marítimo Internacional
                  </a>
                  <a href="/servicios/transporte-aereo/" class="block px-6 py-3 text-sm font-bold text-slate-700 hover:bg-slate-50 hover:text-accent transition-colors border-b border-slate-100">
                    <i class="fa-solid fa-plane mr-3 text-primary"></i>Transporte Aéreo Internacional
                  </a>
                  <a href="/servicios/transporte-terrestre/" class="block px-6 py-3 text-sm font-bold text-slate-700 hover:bg-slate-50 hover:text-accent transition-colors border-b border-slate-100">
                    <i class="fa-solid fa-truck mr-3 text-primary"></i>Transporte Terrestre
                  </a>
                  <a href="/servicios/agenciamiento-aduanero/" class="block px-6 py-3 text-sm font-bold text-slate-700 hover:bg-slate-50 hover:text-accent transition-colors">
                    <i class="fa-solid fa-gavel mr-3 text-primary"></i>Agenciamiento Aduanero
                  </a>
                </div>
                <div class="border-t border-slate-100 py-2 px-6 bg-slate-50">
                  <a href="/servicios" class="text-xs font-black uppercase tracking-widest text-accent hover:text-primary transition-colors">
                    Ver todos <i class="fa-solid fa-arrow-right ml-1"></i>
                  </a>
                </div>
              </div>
            </div>
            
            <a 
              href="/contacto"
              class={`font-bold text-sm uppercase tracking-wider transition-colors pb-1 border-b-2 ${
                currentPath === '/contacto' 
                  ? 'text-primary border-accent' 
                  : 'text-slate-600 border-transparent hover:text-accent hover:border-accent'
              }`}
            >
              Contáctanos
            </a>
            <a 
              href="/contacto"
              class="bg-primary text-white px-8 py-3 font-bold text-xs uppercase tracking-widest hover:bg-accent transition-all shadow-xl"
            >
              Cotizar Ahora
            </a>
          </div>
          
          <!-- Mobile Menu Button -->
          <button 
            id="mobile-menu-btn"
            class="md:hidden p-2 text-primary hover:text-accent transition-colors"
            aria-label="Menu"
          >
            <i class="fa-solid fa-bars text-2xl"></i>
          </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden pb-6 border-t border-slate-100">
          <nav class="flex flex-col gap-4 pt-4">
            {navLinks.map((link) => (
              <a 
                href={link.href}
                class="text-slate-600 hover:text-accent font-bold text-sm uppercase tracking-wider transition-colors py-2"
              >
                {link.label}
              </a>
            ))}
            <a 
              href="/contacto"
              class="bg-accent text-white px-8 py-4 font-bold text-xs uppercase tracking-widest text-center hover:bg-primary transition-all mt-2"
            >
              Cotizar Ahora
            </a>
          </nav>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <slot />

    <!-- Footer -->
    <footer class="bg-slate-950 pt-24 pb-12 text-slate-400 border-t border-slate-900">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-16 mb-20">
          <!-- Brand -->
          <div>
            <div class="mb-8">
              <img 
                src="/logo-new.webp" 
                alt="Serviworld Logistics - Empresa de logística internacional en Colombia" 
                class="h-12 w-auto object-contain brightness-0 invert"
              />
            </div>
            <p class="leading-relaxed mb-8 font-light">
              Soluciones de alto nivel para optimizar la cadena de suministro global. Expertos en cumplimiento y eficiencia.
            </p>
            <div class="flex space-x-5">
              <a class="text-lg hover:text-accent transition-colors" href="https://www.facebook.com/Serviworld-Logistics-2290879491171610/" target="_blank" rel="noopener noreferrer" aria-label="Facebook"><i class="fa-brands fa-facebook-f"></i></a>
              <a class="text-lg hover:text-accent transition-colors" href="https://instagram.com/serviworldlogistics" target="_blank" rel="noopener noreferrer" aria-label="Instagram"><i class="fa-brands fa-instagram"></i></a>
            </div>
          </div>
          
          <!-- Divisiones -->
          <div>
            <h4 class="text-white font-black mb-8 uppercase text-sm tracking-[0.2em]">Divisiones</h4>
            <ul class="space-y-4 font-light">
              <li><a class="hover:text-accent transition-colors" href="/servicios">Flete Marítimo Internacional</a></li>
              <li><a class="hover:text-accent transition-colors" href="/servicios">Flete Aéreo Internacional</a></li>
              <li><a class="hover:text-accent transition-colors" href="/servicios">Distribución Terrestre</a></li>
              <li><a class="hover:text-accent transition-colors" href="/servicios">Consultoría Aduanera</a></li>
            </ul>
          </div>
          
          <!-- Oficinas -->
          <div>
            <h4 class="text-white font-black mb-8 uppercase text-sm tracking-[0.2em]">Oficinas</h4>
            <ul class="space-y-6 font-light">
              <li class="flex items-start">
                <i class="fa-solid fa-location-dot text-accent mr-4 mt-1"></i>
                <span>Bogotá: Calle 125 No. 99 - 34</span>
              </li>
              <li class="flex items-start">
                <i class="fa-solid fa-location-dot text-accent mr-4 mt-1"></i>
                <span>Medellín: Calle 18 No. 35 - 69</span>
              </li>
              <li class="flex items-start">
                <i class="fa-solid fa-phone text-accent mr-4 mt-1"></i>
                <span>+57 311 403 3806</span>
              </li>
            </ul>
          </div>
          
          <!-- Newsletter -->
          <div>
            <h4 class="text-white font-black mb-8 uppercase text-sm tracking-[0.2em]">Newsletter</h4>
            <p class="mb-6 font-light">Reportes semanales sobre el estado de puertos y logística global.</p>
            <form class="flex" onsubmit="event.preventDefault(); alert('¡Gracias por suscribirte!');">
              <input 
                type="email" 
                placeholder="Su email corporativo" 
                class="w-full bg-slate-900 border-0 py-4 px-6 text-white focus:ring-2 focus:ring-accent font-light outline-none"
                required
              />
              <button type="submit" class="bg-accent text-white px-6 hover:bg-white hover:text-primary transition-all">
                <i class="fa-solid fa-paper-plane"></i>
              </button>
            </form>
          </div>
        </div>
        
        <div class="pt-8 border-t border-slate-900 flex flex-col md:flex-row justify-between items-center text-[10px] uppercase tracking-widest font-black">
          <p>© 2008-2026 Serviworld Logistics. Todos los derechos reservados.</p>
          <div class="flex space-x-10 mt-6 md:mt-0">
            <a class="hover:text-white transition-colors" href="/legal">Legal</a>
            <a class="hover:text-white transition-colors" href="/privacidad">Privacidad</a>
            <a class="hover:text-white transition-colors" href="/cookies">Cookies</a>
          </div>
        </div>
      </div>
    </footer>

    <!-- WhatsApp Float Button -->
    <a 
      href="https://wa.me/573114033806" 
      target="_blank"
      class="fixed bottom-8 right-8 bg-[#25D366] text-white w-16 h-16 rounded-full shadow-2xl hover:scale-110 transition-transform z-50 flex items-center justify-center text-3xl"
      aria-label="WhatsApp"
    >
      <i class="fa-brands fa-whatsapp"></i>
    </a>

    <!-- Mobile Menu Script -->
    <script>
      const btn = document.getElementById('mobile-menu-btn');
      const menu = document.getElementById('mobile-menu');
      
      btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
