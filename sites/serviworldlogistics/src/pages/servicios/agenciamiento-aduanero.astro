---
import Layout from '../../layouts/Layout.astro';
import SchemaOrg from '../../components/SchemaOrg.astro';

const service = {
  badge: "Servicio Especializado",
  breadcrumb: "Agenciamiento Aduanero",
  title: "GESTIÓN ADUANERA",
  titleAccent: "INTEGRAL",
  subtitle: "Asesoría jurídica experta y trámites ágiles ante autoridades aduaneras. Contamos con más de 25 años de experiencia asesorando a importadores y exportadores.",
  
  intro: {
    headline: "Legalidad y Eficiencia en Comercio Exterior",
    description: "Contamos con más de 25 años de experiencia asesorando a importadores y exportadores en sus procesos aduaneros, cumpliendo a cabalidad la normatividad bajo altos estándares de seguridad y calidad. Nuestra agencia aduanera se convierte en su aliado estratégico para navegar la complejidad regulatoria."
  },
  
  features: [
    "Agenciamiento Aduanero de Importaciones y Exportaciones",
    "Agenciamiento de Tránsito Aduanero DTA/OTM",
    "Asesorías en trámites de Comercio Exterior",
    "Registros de Importación",
    "Servicio de clasificación arancelaria",
    "Vistos Buenos (Invima, ICA, etc.)",
    "Descargues directos",
    "Certificados de origen",
    "Elaboración trámites VUCE"
  ],
  
  process: [
    { step: "01", title: "Recepción Documental", description: "Revisión exhaustiva de documentos comerciales para asegurar conformidad antes del arribo." },
    { step: "02", title: "Clasificación & VUCE", description: "Determinación correcta de la partida arancelaria y gestión de permisos previos." },
    { step: "03", title: "Declaración & Pago", description: "Presentación de la declaración de importación y pago de tributos aduaneros." },
    { step: "04", title: "Levante y Entrega", description: "Obtención del levante de la mercancía y coordinación logística para entrega final." }
  ],
  
  certifications: [
    { icon: "fa-shield-check", name: "Certificación BASC" },
    { icon: "fa-file-certificate", name: "Operador OEA" },
    { icon: "fa-globe", name: "Red WCA" },
    { icon: "fa-handshake", name: "Aliados DIAN" }
  ],
  
  image: "/images/servicios/agenciamiento-aduanero-colombia.jpg",
  sideImage: "/images/servicios/documentos-tramites-aduaneros-colombia.jpg"
};
---

<Layout title="Agenciamiento Aduanero en Colombia - Serviworld Logistics" description="Servicio de agenciamiento aduanero con 25+ años de experiencia. Trámites VUCE, clasificación arancelaria, registros de importación. Agencia de Aduanas G5 certificada.">
  <SchemaOrg
    slot="head"
    type={['Service', 'BreadcrumbList']}
    breadcrumbs={[
      { name: 'Inicio', url: '/' },
      { name: 'Servicios', url: '/servicios' },
      { name: 'Agenciamiento Aduanero', url: '/servicios/agenciamiento-aduanero/' }
    ]}
    data={{
      name: 'Servicio de Agenciamiento Aduanero',
      description: service.subtitle,
      serviceType: 'Customs Brokerage',
      url: 'https://serviworldlogistics.com/servicios/agenciamiento-aduanero/'
    }}
  />
  <section class="relative h-[80vh] min-h-[600px] flex items-center overflow-hidden">
    <img alt="Servicio de agenciamiento aduanero para importaciones y exportaciones en Colombia - Serviworld Logistics" class="absolute inset-0 w-full h-full object-cover" src={service.image} />
    <div class="absolute inset-0 hero-gradient"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full text-white">
      <div class="max-w-4xl">
        <div class="flex items-center gap-4 mb-6">
          <span class="inline-block bg-accent px-4 py-2 text-xs font-black uppercase tracking-[0.3em]">{service.badge}</span>
          <span class="text-slate-300 text-sm font-bold uppercase tracking-widest"><i class="fa-solid fa-chevron-right text-xs mx-2"></i> {service.breadcrumb}</span>
        </div>
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-6 leading-[0.95] tracking-tighter font-display">{service.title} <br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-red-400 italic">{service.titleAccent}</span></h1>
        <p class="text-xl md:text-2xl text-slate-200 mb-10 max-w-2xl font-light leading-relaxed">{service.subtitle}</p>
        <a href="#detalles" class="bg-white text-primary px-10 py-4 font-black uppercase tracking-widest text-sm hover:bg-accent hover:text-white transition-all text-center shadow-2xl flex items-center justify-center gap-2 inline-flex">Ver Trámites <i class="fa-solid fa-arrow-down"></i></a>
      </div>
    </div>
  </section>

  <section class="divi-section bg-slate-50" id="detalles">
    <div class="divi-row">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
        <div class="lg:col-span-7">
          <h2 class="text-4xl md:text-5xl font-black text-primary mb-8 uppercase tracking-tighter font-display">{service.intro.headline}</h2>
          <div class="h-1.5 w-24 bg-accent mb-10"></div>
          <p class="text-lg text-slate-600 mb-8 leading-relaxed font-light">{service.intro.description}</p>
          <div class="bg-white p-8 shadow-lg border-l-4 border-accent mb-10">
            <h3 class="text-2xl font-black text-primary mb-6 uppercase tracking-tight font-display">Servicios Administrativos y Legales</h3>
            <ul class="space-y-4">
              {service.features.map((feature) => <li class="service-list-item text-slate-700 font-medium">{feature}</li>)}
            </ul>
          </div>
          <a href="/contacto" class="inline-flex items-center justify-center bg-primary text-white px-8 py-4 font-black uppercase tracking-widest text-xs hover:bg-accent transition-all shadow-lg"><i class="fa-solid fa-file-contract mr-2 text-lg"></i> Solicitar Asesoría Legal</a>
        </div>
        <div class="lg:col-span-5 relative">
          <div class="relative z-10">
            <img alt="Documentación y trámites aduaneros VUCE para comercio exterior Colombia" class="w-full h-auto shadow-2xl rounded-sm mb-8" src={service.sideImage} />
          </div>
          <div class="bg-white p-8 shadow-xl border-t-4 border-primary relative z-20 mt-[-50px] mx-4 lg:mx-0 lg:ml-[-50px]">
            <div class="flex items-center mb-6">
              <i class="fa-solid fa-award text-4xl text-accent mr-4"></i>
              <h3 class="text-xl font-black text-primary uppercase tracking-tight font-display">Certificaciones</h3>
            </div>
            <p class="text-slate-600 text-sm mb-6 leading-relaxed">Nuestras operaciones están avaladas por certificaciones internacionales.</p>
            <div class="grid grid-cols-2 gap-4">
              {service.certifications.map((cert) => (
                <div class="flex items-center gap-3 p-3 bg-slate-50 rounded-sm">
                  <i class={`fa-solid ${cert.icon} text-accent text-xl`}></i>
                  <span class="font-bold text-xs uppercase text-slate-700">{cert.name}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="divi-section bg-primary text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 pointer-events-none">
      <div class="absolute top-0 right-0 transform translate-x-1/3 -translate-y-1/3">
        <i class="fa-solid fa-gavel text-[400px]"></i>
      </div>
    </div>
    <div class="divi-row relative z-10">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <span class="text-accent font-black uppercase tracking-[0.2em] mb-4 block">Metodología</span>
        <h2 class="text-4xl md:text-5xl font-black mb-6 uppercase tracking-tighter font-display">Proceso de Nacionalización</h2>
        <p class="text-slate-300 text-lg font-light">Un flujo de trabajo diseñado para minimizar riesgos y tiempos en puerto.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {service.process.map((step) => (
          <div class="relative group">
            <div class="mb-6 flex items-center justify-center w-20 h-20 bg-white/10 rounded-full border border-white/20 group-hover:bg-accent group-hover:border-accent transition-all duration-300">
              <span class="text-3xl font-black text-white">{step.step}</span>
            </div>
            <h4 class="text-xl font-black mb-4 uppercase tracking-tight font-display">{step.title}</h4>
            <p class="text-slate-400 text-sm font-light leading-relaxed">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="divi-section bg-slate-100">
    <div class="divi-row">
      <div class="bg-white shadow-2xl overflow-hidden flex flex-col lg:flex-row">
        <div class="lg:w-1/2 relative min-h-[400px]">
          <img alt="Aduana" class="absolute inset-0 w-full h-full object-cover grayscale" src={service.image} />
          <div class="absolute inset-0 bg-primary/80 mix-blend-multiply"></div>
          <div class="absolute inset-0 flex flex-col justify-center p-12 text-white">
            <i class="fa-solid fa-scale-balanced text-6xl mb-6 text-accent"></i>
            <h3 class="text-3xl font-black uppercase tracking-tighter mb-4 font-display">Evite Sanciones</h3>
            <p class="text-lg font-light text-slate-200">La normativa aduanera cambia constantemente. Deje sus operaciones en manos de expertos.</p>
          </div>
        </div>
        <div class="lg:w-1/2 p-12 lg:p-16 flex flex-col justify-center">
          <h2 class="text-3xl md:text-4xl font-black text-primary mb-6 uppercase tracking-tighter font-display">Consulta Personalizada</h2>
          <p class="text-slate-600 mb-8 font-light">¿Tiene dudas sobre la clasificación arancelaria? Agende una cita con nuestros especialistas.</p>
          <a href="/contacto" class="inline-flex items-center justify-center bg-primary text-white px-8 py-4 font-black uppercase tracking-widest text-sm hover:bg-accent transition-all shadow-xl"><i class="fa-solid fa-calendar-check mr-2"></i> Agendar Consulta</a>
        </div>
      </div>
    </div>
  </section>

  <style>
    .hero-gradient { background: linear-gradient(180deg, rgba(0,0,0,0.5) 0%, rgba(26,54,93,0.9) 100%); }
    .divi-section { padding-top: 5rem; padding-bottom: 5rem; padding-left: 1rem; padding-right: 1rem; }
    @media (min-width: 1024px) { .divi-section { padding-top: 8rem; padding-bottom: 8rem; } }
    .divi-row { max-width: 80rem; margin-left: auto; margin-right: auto; }
    .service-list-item::before { content: "\f058"; font-family: "Font Awesome 6 Free"; font-weight: 900; color: #e11d48; margin-right: 0.75rem; font-size: 1.1em; }
  </style>
</Layout>
