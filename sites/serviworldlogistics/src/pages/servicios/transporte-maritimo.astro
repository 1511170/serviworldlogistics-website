---
import Layout from '../../layouts/Layout.astro';
import SchemaOrg from '../../components/SchemaOrg.astro';

const service = {
  badge: "Servicio Especializado",
  breadcrumb: "Transporte Marítimo Internacional",
  title: "TRANSPORTE DE CARGA",
  titleAccent: "MARÍTIMA INTERNACIONAL",
  subtitle: "Operamos en los diferentes puertos del mundo con servicios logísticos para todo tipo de industria. Fletes competitivos en contenedores FCL y carga consolidada LCL.",
  
  intro: {
    headline: "Soluciones Marítimas Globales",
    description: "Nuestra experiencia en el manejo de importaciones y exportaciones de mercancías en todas sus modalidades, nos ha permitido desarrollar soluciones con los mejores estándares de seguridad, cumplimiento y calidad."
  },
  
  features: [
    "Transporte de Carga Marítima Internacional FCL",
    "Carga Consolidada LCL para cargas parciales",
    "Contenedores 20' DC, 40' DC y 40' HC",
    "Contenedores especiales: Reefer, Flat Racks, Open Top",
    "Seguros de carga internacional",
    "Tracking en tiempo real de su mercancía"
  ],
  
  process: [
    { step: "01", title: "Cotización y Reserva", description: "Analizamos sus necesidades y reservamos el espacio en la naviera más adecuada." },
    { step: "02", title: "Recepción y Consolidación", description: "Recibimos su carga y la consolidamos de manera eficiente para optimizar costos." },
    { step: "03", title: "Embarque y Tránsito", description: "Supervisamos el embarque y monitoreamos su carga durante todo el tránsito marítimo." },
    { step: "04", title: "Desembarque y Entrega", description: "Gestionamos el desembarque en destino y coordinamos la entrega final." }
  ],
  
  certifications: [
    { icon: "fa-shield-check", name: "Certificación BASC" },
    { icon: "fa-anchor", name: "Aliados FMC" },
    { icon: "fa-globe", name: "Red WCA" },
    { icon: "fa-ship", name: "Operadores OEA" }
  ],
  
  image: "/images/servicios/transporte-maritimo-internacional-colombia.webp",
  sideImage: "/images/servicios/contenedores-carga-maritima-colombia.webp"
};
---

<Layout title="Transporte Marítimo Internacional - Serviworld Logistics" description="Servicio de transporte de carga marítima internacional FCL y LCL. Contenedores estándar y especiales (Reefer, Flat Racks, Open Top). Cobertura en los principales puertos del mundo.">
  <SchemaOrg
    slot="head"
    type={['Service', 'BreadcrumbList']}
    breadcrumbs={[
      { name: 'Inicio', url: '/' },
      { name: 'Servicios', url: '/servicios' },
      { name: 'Transporte Marítimo Internacional', url: '/servicios/transporte-maritimo/' }
    ]}
    data={{
      name: 'Transporte de Carga Marítima Internacional',
      description: service.subtitle,
      serviceType: 'Freight Transport - Maritime',
      url: 'https://serviworldlogistics.com/servicios/transporte-maritimo/'
    }}
  />
  <section class="relative h-[80vh] min-h-[600px] flex items-center overflow-hidden">
    <img alt="Servicio de transporte marítimo internacional de carga FCL y LCL - Serviworld Logistics Colombia" class="absolute inset-0 w-full h-full object-cover" src={service.image} />
    <div class="absolute inset-0 hero-gradient"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full text-white">
      <div class="max-w-4xl">
        <div class="flex items-center gap-4 mb-6">
          <span class="inline-block bg-accent px-4 py-2 text-xs font-black uppercase tracking-[0.3em]">{service.badge}</span>
          <span class="text-slate-300 text-sm font-bold uppercase tracking-widest"><i class="fa-solid fa-chevron-right text-xs mx-2"></i> {service.breadcrumb}</span>
        </div>
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-black mb-6 leading-[0.95] tracking-tighter font-display">{service.title} <br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-red-400 italic">{service.titleAccent}</span></h1>
        <p class="text-xl md:text-2xl text-slate-200 mb-10 max-w-2xl font-light leading-relaxed">{service.subtitle}</p>
        <a href="#detalles" class="bg-white text-primary px-10 py-4 font-black uppercase tracking-widest text-sm hover:bg-accent hover:text-white transition-all text-center shadow-2xl flex items-center justify-center gap-2 inline-flex">Ver Detalles <i class="fa-solid fa-arrow-down"></i></a>
      </div>
    </div>
  </section>

  <section class="divi-section bg-slate-50" id="detalles">
    <div class="divi-row">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
        <div class="lg:col-span-7">
          <h2 class="text-4xl md:text-5xl font-black text-primary mb-8 uppercase tracking-tighter font-display">{service.intro.headline}</h2>
          <div class="h-1.5 w-24 bg-accent mb-10"></div>
          <p class="text-lg text-slate-600 mb-8 leading-relaxed font-light">{service.intro.description}</p>
          <div class="bg-white p-8 shadow-lg border-l-4 border-accent mb-10">
            <h3 class="text-2xl font-black text-primary mb-6 uppercase tracking-tight font-display">Nuestros Servicios Marítimos</h3>
            <ul class="space-y-4">
              {service.features.map((feature) => <li class="service-list-item text-slate-700 font-medium">{feature}</li>)}
            </ul>
          </div>
          <a href="/contacto" class="inline-flex items-center justify-center bg-primary text-white px-8 py-4 font-black uppercase tracking-widest text-xs hover:bg-accent transition-all shadow-lg"><i class="fa-solid fa-ship mr-2 text-lg"></i> Cotizar Flete Marítimo Internacional</a>
        </div>
        <div class="lg:col-span-5 relative">
          <div class="relative z-10">
            <img alt="Contenedores de carga marítima internacional en puerto colombiano" class="w-full h-auto shadow-2xl rounded-sm mb-8" src={service.sideImage} />
          </div>
          <div class="bg-white p-8 shadow-xl border-t-4 border-primary relative z-20 mt-[-50px] mx-4 lg:mx-0 lg:ml-[-50px]">
            <div class="flex items-center mb-6">
              <i class="fa-solid fa-award text-4xl text-accent mr-4"></i>
              <h3 class="text-xl font-black text-primary uppercase tracking-tight font-display">Certificaciones</h3>
            </div>
            <div class="grid grid-cols-2 gap-4">
              {service.certifications.map((cert) => (
                <div class="flex items-center gap-3 p-3 bg-slate-50 rounded-sm">
                  <i class={`fa-solid ${cert.icon} text-accent text-xl`}></i>
                  <span class="font-bold text-xs uppercase text-slate-700">{cert.name}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="divi-section bg-primary text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 pointer-events-none">
      <div class="absolute top-0 right-0 transform translate-x-1/3 -translate-y-1/3">
        <i class="fa-solid fa-ship text-[400px]"></i>
      </div>
    </div>
    <div class="divi-row relative z-10">
      <div class="text-center mb-16 max-w-3xl mx-auto">
        <span class="text-accent font-black uppercase tracking-[0.2em] mb-4 block">Proceso</span>
        <h2 class="text-4xl md:text-5xl font-black mb-6 uppercase tracking-tighter font-display">¿Cómo Trabajamos?</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {service.process.map((step) => (
          <div class="relative group">
            <div class="mb-6 flex items-center justify-center w-20 h-20 bg-white/10 rounded-full border border-white/20 group-hover:bg-accent group-hover:border-accent transition-all duration-300">
              <span class="text-3xl font-black text-white">{step.step}</span>
            </div>
            <h4 class="text-xl font-black mb-4 uppercase tracking-tight font-display">{step.title}</h4>
            <p class="text-slate-400 text-sm font-light leading-relaxed">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <style>
    .hero-gradient { background: linear-gradient(180deg, rgba(0,0,0,0.5) 0%, rgba(26,54,93,0.9) 100%); }
    .divi-section { padding-top: 5rem; padding-bottom: 5rem; padding-left: 1rem; padding-right: 1rem; }
    @media (min-width: 1024px) { .divi-section { padding-top: 8rem; padding-bottom: 8rem; } }
    .divi-row { max-width: 80rem; margin-left: auto; margin-right: auto; }
    .service-list-item::before { content: "\f058"; font-family: "Font Awesome 6 Free"; font-weight: 900; color: #e11d48; margin-right: 0.75rem; font-size: 1.1em; }
  </style>
</Layout>
