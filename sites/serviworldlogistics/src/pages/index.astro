---
import Layout from '../layouts/Layout.astro';
import SchemaOrg from '../components/SchemaOrg.astro';
import siteConfig from '../../config/site.config.ts';

// Contenido scrapeado del sitio actual
const content = {
  hero: {
    badge: "Estándar Global",
    title: "EXCELENCIA EN LOGÍSTICA",
    subtitle: "Conectamos sus productos con el mundo a través de soluciones integrales de transporte internacional con el rigor y la autoridad que su industria exige.",
    ctaPrimary: "Nuestros Servicios",
    ctaSecondary: "Consultoría"
  },
  features: [
    {
      icon: "fa-user-gear",
      title: "Servicio Personalizado",
      description: "Arquitectura logística diseñada a medida según la complejidad de su mercancía."
    },
    {
      icon: "fa-shield-check",
      title: "Certificación Total",
      description: "Operamos bajo los estándares BASC y normativas internacionales de máxima seguridad."
    },
    {
      icon: "fa-users-viewfinder",
      title: "Equipo Experto",
      description: "Profesionales con visión estratégica en cada nodo de la cadena de suministro."
    },
    {
      icon: "fa-handshake-angle",
      title: "Red Global",
      description: "Alianzas estratégicas con puertos y aerolíneas en los 5 continentes."
    }
  ],
  about: {
    headline: "¿Por qué lideramos el sector logístico?",
    subheadline: "Más de una década optimizando procesos de comercio exterior para las empresas más exigentes de la región.",
    description: "Somos expertos en soluciones logísticas integrales en comercio internacional para el manejo de carga general y productos perecederos. La cercanía con nuestros clientes y el nivel de flexibilidad en la organización nos permiten ajustarnos y actuar ágilmente a los constantes cambios."
  },
  services: [
    {
      icon: "fa-ship",
      title: "Transporte Marítimo Internacional",
      description: "Fletes competitivos en contenedores FCL y carga consolidada LCL.",
      image: "/images/servicios/transporte-maritimo-internacional-colombia.jpg"
    },
    {
      icon: "fa-plane-departure",
      title: "Carga Aérea Internacional",
      description: "Agilidad extrema para envíos urgentes y mercancías de alto valor.",
      image: "/images/servicios/transporte-aereo-internacional-colombia.jpg"
    },
    {
      icon: "fa-truck-container",
      title: "Transporte Terrestre",
      description: "Seguridad satelital 24/7 en todas nuestras rutas nacionales.",
      image: "/images/servicios/transporte-terrestre-carga-colombia.jpg"
    },
    {
      icon: "fa-gavel",
      title: "Agenciamiento Aduanero",
      description: "Asesoría jurídica y trámites ágiles ante autoridades aduaneras.",
      image: "/images/servicios/agenciamiento-aduanero-colombia.jpg"
    }
  ],
  specialties: {
    headline: "Manejo de Carga Especializada",
    items: [
      {
        icon: "fa-snowflake",
        title: "Productos Perecederos",
        description: "Control riguroso de la cadena de frío y tiempos críticos de entrega para exportación e importación."
      },
      {
        icon: "fa-box-open",
        title: "Carga de Proyecto",
        description: "Logística para sobredimensionados y maquinaria pesada con ingeniería de transporte aplicada."
      }
    ]
  },
  testimonial: {
    quote: "Desde hace 12 años Serviworld Logistics nos ha brindado todo su apoyo en materia logística, cuentan con un personal calificado y son muy dedicados a la operación. Su agilidad en los procesos es fundamental.",
    author: "Luis Baron",
    role: "Jefe de Comercio Exterior - Impormar"
  },
  contact: {
    headline: "¿Hablamos de su próximo embarque?",
    subheadline: "Solicite una auditoría logística sin costo para su empresa.",
    phone: "+57 311 4033806",
    cities: [
      { name: "Bogotá", phone: "(1) 3906723", address: "Calle 125 No. 99 - 34" },
      { name: "Medellín", phone: "(4) 6050383", address: "Calle 18 No. 35 - 69" },
      { name: "Cartagena", phone: "(5) 6944321", address: "" }
    ]
  }
};
---

<Layout title={`${siteConfig.site.name} - Excelencia en Logística Internacional`} description="Serviworld Logistics: empresa colombiana de logística integral con más de 15 años de experiencia en transporte marítimo internacional, carga aérea internacional, transporte terrestre y agenciamiento aduanero. Oficinas en Bogotá, Medellín, Cartagena y Barranquilla.">
  <SchemaOrg slot="head" type={['Organization', 'WebSite', 'LocalBusiness']} />
  <main class="font-body">
    <!-- Hero Section -->
    <section class="relative h-[90vh] min-h-[700px] flex items-center overflow-hidden">
      <img
        alt="Buque de carga con contenedores en puerto internacional - Serviworld Logistics Colombia"
        class="absolute inset-0 w-full h-full object-cover"
        src="/images/servicios/transporte-maritimo-internacional-colombia.jpg"
      />
      <div class="absolute inset-0 hero-gradient"></div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full text-white">
        <div class="max-w-4xl">
          <span class="inline-block bg-accent px-5 py-2 text-xs font-black uppercase tracking-[0.3em] mb-8">
            {content.hero.badge}
          </span>
          <h1 class="text-6xl md:text-8xl lg:text-9xl font-black mb-8 leading-[0.9] tracking-tighter font-display">
            EXCELENCIA EN <br/>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-red-400 italic">
              LOGÍSTICA
            </span>
          </h1>
          <p class="text-xl md:text-2xl text-slate-200 mb-12 max-w-2xl font-light leading-relaxed">
            {content.hero.subtitle}
          </p>
          <div class="flex flex-col sm:flex-row gap-6">
            <a 
              href="#services"
              class="bg-white text-primary px-10 py-5 font-black uppercase tracking-widest text-sm hover:bg-accent hover:text-white transition-all text-center shadow-2xl"
            >
              {content.hero.ctaPrimary}
            </a>
            <a 
              href="#contact"
              class="border-2 border-white/40 backdrop-blur-sm text-white px-10 py-5 font-black uppercase tracking-widest text-sm hover:bg-white hover:text-primary transition-all text-center"
            >
              {content.hero.ctaSecondary}
            </a>
          </div>
        </div>
      </div>
      
      <div class="absolute bottom-10 left-1/2 -translate-x-1/2">
        <div class="flex flex-col items-center opacity-50">
          <span class="text-[10px] uppercase tracking-[0.4em] mb-4">Descubrir</span>
          <i class="fa-solid fa-chevron-down animate-bounce"></i>
        </div>
      </div>
    </section>

    <!-- Why Us Section -->
    <section class="divi-section bg-slate-50 dark:bg-slate-900/40">
      <div class="divi-row">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center mb-20">
          <div class="lg:col-span-8">
            <h2 class="text-4xl md:text-6xl font-black text-primary dark:text-white mb-6 uppercase tracking-tighter font-display">
              {content.about.headline}
            </h2>
            <div class="h-2 w-32 bg-accent"></div>
          </div>
          <div class="lg:col-span-4">
            <p class="text-slate-500 dark:text-slate-400 text-lg">
              {content.about.subheadline}
            </p>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          {content.features.map((feature) => (
            <div class="bg-white dark:bg-slate-800 p-10 border-t-4 border-primary hover:border-accent transition-all group">
              <i class={`fa-solid ${feature.icon} text-4xl text-accent mb-8 block`}></i>
              <h3 class="text-2xl font-black mb-4 uppercase tracking-tight dark:text-white font-display">
                {feature.title}
              </h3>
              <p class="text-slate-600 dark:text-slate-400 leading-relaxed">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="divi-section" id="services">
      <div class="divi-row">
        <div class="flex flex-col md:flex-row md:items-end justify-between mb-16 gap-8">
          <div class="max-w-3xl">
            <h2 class="text-5xl md:text-7xl font-black text-primary dark:text-white mb-6 uppercase tracking-tighter font-display">
              Nuestras Operaciones
            </h2>
            <p class="text-xl text-slate-600 dark:text-slate-400 font-light">
              Dominamos la logística multimodal con precisión quirúrgica.
            </p>
          </div>
          <a 
            href="/servicios"
            class="text-accent font-black uppercase tracking-widest text-sm border-b-2 border-accent pb-1 hover:text-primary hover:border-primary transition-all"
          >
            Todos los servicios <i class="fa-solid fa-arrow-right ml-2"></i>
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-1">
          {content.services.map((service) => (
            <div class="group relative overflow-hidden bg-slate-900 aspect-[16/10] service-card">
              <img 
                alt={service.title}
                class="absolute inset-0 w-full h-full object-cover service-image transition-transform duration-1000 opacity-50 grayscale group-hover:grayscale-0"
                src={service.image}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-primary/90 via-primary/20 to-transparent"></div>
              <div class="absolute inset-0 p-12 flex flex-col justify-end">
                <i class={`fa-solid ${service.icon} text-3xl text-accent mb-6`}></i>
                <h3 class="text-3xl font-black text-white mb-4 uppercase tracking-tighter font-display">
                  {service.title}
                </h3>
                <p class="text-slate-300 mb-8 max-w-sm font-light">
                  {service.description}
                </p>
                <a 
                  href="/servicios"
                  class="flex items-center text-xs font-black uppercase tracking-widest text-white hover:text-accent transition-colors"
                >
                  Ver detalles <i class="fa-solid fa-plus-circle ml-3"></i>
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Specialties Section -->
    <section class="divi-section bg-primary text-white relative overflow-hidden">
      <div class="absolute top-0 right-0 w-1/3 h-full opacity-5 pointer-events-none">
        <i class="fa-solid fa-earth-americas text-[40vw]"></i>
      </div>
      <div class="divi-row relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-24 items-center">
          <div>
            <span class="text-accent text-sm font-black uppercase tracking-[0.4em] mb-4 block">Especialidades</span>
            <h2 class="text-5xl md:text-7xl font-black mb-12 uppercase tracking-tighter leading-none font-display">
              Manejo de Carga <br/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-red-400">
                Especializada
              </span>
            </h2>
            <div class="space-y-12">
              {content.specialties.items.map((item) => (
                <div class="flex items-start group">
                  <div class="w-16 h-16 bg-white/10 flex items-center justify-center shrink-0 mr-8 group-hover:bg-accent transition-colors">
                    <i class={`fa-solid ${item.icon} text-2xl text-accent group-hover:text-white`}></i>
                  </div>
                  <div>
                    <h4 class="text-2xl font-black mb-3 uppercase tracking-tight font-display">{item.title}</h4>
                    <p class="text-slate-400 font-light text-lg">{item.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
          <div class="relative">
            <div class="absolute -inset-4 bg-accent/20 -z-10 translate-x-8 translate-y-8"></div>
            <img 
              alt="Equipo profesional de logística internacional Serviworld Logistics Colombia"
              class="w-full h-auto shadow-2xl"
              src="/images/empresa/equipo-logistica-serviworld-colombia.jpg"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonial Section -->
    <section class="divi-section bg-white dark:bg-background-dark">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <i class="fa-solid fa-quote-left text-7xl text-slate-100 dark:text-slate-800 mb-8 block"></i>
        <p class="text-2xl md:text-4xl font-light italic text-slate-800 dark:text-slate-200 leading-tight mb-12">
          "{content.testimonial.quote}"
        </p>
        <div class="flex flex-col items-center">
          <h4 class="text-2xl font-black text-primary dark:text-white uppercase tracking-tighter font-display">
            {content.testimonial.author}
          </h4>
          <span class="text-accent font-black text-xs uppercase tracking-[0.2em] mt-2">
            {content.testimonial.role}
          </span>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="divi-section pt-0" id="contact">
      <div class="divi-row">
        <div class="bg-primary dark:bg-slate-800 p-12 md:p-24 flex flex-col lg:flex-row items-center justify-between gap-12 text-center lg:text-left">
          <div>
            <h2 class="text-4xl md:text-5xl font-black text-white mb-4 uppercase tracking-tighter font-display">
              {content.contact.headline}
            </h2>
            <p class="text-slate-400 text-xl font-light">{content.contact.subheadline}</p>
          </div>
          <div class="flex flex-col sm:flex-row gap-4 shrink-0 w-full lg:w-auto">
            <a 
              href={`tel:${content.contact.phone.replace(/\s/g, '')}`}
              class="flex items-center justify-center bg-accent text-white px-10 py-5 font-black uppercase tracking-widest text-xs hover:bg-white hover:text-primary transition-all shadow-2xl"
            >
              <i class="fa-solid fa-phone-volume mr-3"></i> Contactar Ahora
            </a>
            <a 
              href="mailto:comercial@serviworldlogistics.com"
              class="flex items-center justify-center border-2 border-white/20 text-white px-10 py-5 font-black uppercase tracking-widest text-xs hover:bg-white hover:text-primary transition-all"
            >
              <i class="fa-solid fa-envelope mr-3"></i> Enviar Mensaje
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Info Bar -->
    <section class="bg-slate-100 dark:bg-slate-900 py-12">
      <div class="max-w-7xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
          {content.contact.cities.map((city) => (
            <div class="p-6">
              <h4 class="text-xl font-black text-primary dark:text-white uppercase tracking-tighter mb-2 font-display">
                {city.name}
              </h4>
              {city.address && <p class="text-slate-600 dark:text-slate-400 mb-1">{city.address}</p>}
              <p class="text-accent font-bold">{city.phone}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero-gradient {
    background: linear-gradient(180deg, rgba(0,0,0,0.3) 0%, rgba(26,54,93,0.85) 100%);
  }
  .divi-section {
    padding-top: 5rem;
    padding-bottom: 5rem;
    padding-left: 1rem;
    padding-right: 1rem;
  }
  @media (min-width: 1024px) {
    .divi-section {
      padding-top: 8rem;
      padding-bottom: 8rem;
    }
  }
  .divi-row {
    max-width: 80rem;
    margin-left: auto;
    margin-right: auto;
  }
  .service-card:hover .service-image {
    transform: scale(1.1);
  }
</style>
