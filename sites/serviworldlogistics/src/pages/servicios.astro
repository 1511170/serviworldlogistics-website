---
import Layout from '../layouts/Layout.astro';
import SchemaOrg from '../components/SchemaOrg.astro';

const stats = [
  { number: "15+", label: "Años de Experiencia" },
  { number: "50+", label: "Países de Cobertura" },
  { number: "12k+", label: "Cargas Entregadas" },
  { number: "100%", label: "Seguridad y Garantía" }
];

const services = [
  {
    icon: "fa-ship",
    title: "Transporte de Carga Marítima Internacional",
    description: "Operamos en los diferentes puertos del mundo con servicios logísticos para todo tipo de industria, asegurando la integridad de su mercancía desde el puerto de origen hasta su destino final.",
    features: ["Consolidados LCL / FCL", "Carga Contenerizada", "Carga de Proyectos", "Carga General y Refrigerada"],
    image: "/images/servicios/transporte-maritimo-internacional-colombia.jpg",
    link: "/servicios/transporte-maritimo/",
    reverse: false
  },
  {
    icon: "fa-plane-departure",
    title: "Transporte de Carga Aérea Internacional",
    description: "Manejamos una red de Agentes Internacionales que nos permiten ofrecer un amplio portafolio de servicios de carga aérea con los tiempos de tránsito más competitivos.",
    features: ["Carga Express / Urgente", "Manejo de Perecederos", "Control de Temperatura", "Red Global de Agentes"],
    image: "/images/servicios/transporte-aereo-internacional-colombia.jpg",
    link: "/servicios/transporte-aereo/",
    reverse: true
  },
  {
    icon: "fa-truck",
    title: "Transporte de Carga Terrestre",
    description: "Brindamos transporte de carga terrestre con los mejores estándares de seguridad, cumplimiento y calidad, garantizando la trazabilidad de sus despachos a nivel nacional.",
    features: ["Cargas Consolidadas", "Distribución Nacional", "Almacenamiento y Racks", "Carga Extra Dimensionada"],
    image: "/images/servicios/transporte-terrestre-carga-colombia.jpg",
    link: "/servicios/transporte-terrestre/",
    reverse: false
  },
  {
    icon: "fa-gavel",
    title: "Servicio de Agenciamiento Aduanero",
    description: "Contamos con más de 25 años de experiencia asesorando a importadores y exportadores en sus procesos aduaneros, cumpliendo a cabalidad la normatividad legal vigente.",
    features: ["Trámites VUCE", "Clasificación Arancelaria", "Registros de Importación", "Asesoría Integral en Comercio"],
    image: "/images/servicios/agenciamiento-aduanero-colombia.jpg",
    link: "/servicios/agenciamiento-aduanero/",
    reverse: true
  }
];
---

<Layout title="Servicios de Logística Internacional - Serviworld Logistics" description="Servicios de transporte marítimo internacional, carga aérea internacional, transporte terrestre y agenciamiento aduanero en Colombia. Cobertura en más de 50 países con 15+ años de experiencia.">
  <SchemaOrg
    slot="head"
    type={['BreadcrumbList', 'Service', 'Service', 'Service', 'Service']}
    breadcrumbs={[
      { name: 'Inicio', url: '/' },
      { name: 'Servicios', url: '/servicios' }
    ]}
    data={{ name: 'Logística Integral', description: 'Servicios de transporte marítimo internacional, carga aérea internacional, transporte terrestre y agenciamiento aduanero', serviceType: 'Freight Transport', url: 'https://serviworldlogistics.com/servicios' }}
  />
  <!-- Header Section -->
  <header class="relative pt-32 pb-20 md:pt-48 md:pb-32 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <img 
        alt="Servicios de logística internacional en Colombia - Serviworld Logistics" 
        class="w-full h-full object-cover opacity-20 grayscale"
        src="/images/servicios/transporte-maritimo-internacional-colombia.jpg"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-white/0 via-white/50 to-white"></div>
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 text-center">
      <span class="inline-block px-4 py-2 bg-primary/10 text-primary text-xs font-black uppercase tracking-widest mb-6">
        Excelencia en Logística
      </span>
      <h1 class="text-5xl md:text-7xl font-display font-black text-slate-900 mb-6 leading-tight">
        Nuestros <span class="text-primary">Servicios</span>
      </h1>
      <p class="max-w-3xl mx-auto text-lg md:text-xl text-slate-600 leading-relaxed">
        Ofrecemos soluciones integrales de transporte y logística internacional adaptadas a las exigencias del mercado global actual.
      </p>
    </div>
  </header>

  <!-- Stats Section -->
  <section class="pb-24 relative">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 bg-white p-8 md:p-12 shadow-xl border border-slate-200">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-black text-primary mb-2">{stat.number}</div>
            <p class="text-slate-500 font-medium text-sm uppercase tracking-wider">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <main class="space-y-32 pb-32">
    {services.map((service, index) => (
      <section class="max-w-7xl mx-auto px-4" id={`servicio-${index}`}>
        <div class={`flex flex-col ${service.reverse ? 'lg:flex-row-reverse' : 'lg:flex-row'} items-center gap-12 lg:gap-20`}>
          <!-- Image -->
          <div class="w-full lg:w-1/2 group">
            <div class="relative overflow-hidden shadow-2xl">
              <img 
                alt={service.title}
                class="w-full aspect-[4/3] object-cover transform group-hover:scale-105 transition-transform duration-700"
                src={service.image}
              />
              <div class="absolute inset-0 bg-primary/10 mix-blend-multiply"></div>
            </div>
          </div>
          
          <!-- Content -->
          <div class="w-full lg:w-1/2 space-y-6">
            <div class="w-16 h-16 bg-primary/10 flex items-center justify-center text-primary mb-2">
              <i class={`fa-solid ${service.icon} text-3xl`}></i>
            </div>
            <h2 class="text-3xl md:text-4xl font-display font-black text-slate-900">
              {service.title}
            </h2>
            <p class="text-lg text-slate-600 leading-relaxed">
              {service.description}
            </p>
            <ul class="grid md:grid-cols-2 gap-4">
              {service.features.map((feature) => (
                <li class="flex items-start gap-3">
                  <i class="fa-solid fa-check-circle text-primary mt-1"></i>
                  <span class="font-medium text-slate-700">{feature}</span>
                </li>
              ))}
            </ul>
            <div class="pt-4">
              <a 
                href={service.link}
                class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 font-black uppercase tracking-widest text-xs hover:bg-accent transition-all shadow-lg group"
              >
                Ver Detalles
                <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
              </a>
            </div>
          </div>
        </div>
      </section>
    ))}
  </main>

  <!-- Infrastructure Section -->
  <section class="py-24 bg-primary text-white overflow-hidden relative">
    <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle, #ffffff 1px, transparent 1px); background-size: 30px 30px;"></div>
    <div class="max-w-7xl mx-auto px-4 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-display font-black mb-4">Infraestructura Global</h2>
        <p class="text-slate-200 max-w-2xl mx-auto">
          Nuestra red estratégica nos permite conectar a nuestros clientes con los principales mercados del mundo de manera eficiente.
        </p>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div class="bg-white/10 p-6 border border-white/10">
            <h3 class="text-xl font-black mb-4 flex items-center gap-2 uppercase tracking-tight">
              <i class="fa-solid fa-globe"></i>
              Nodos Estratégicos
            </h3>
            <div class="space-y-4">
              <div>
                <div class="flex justify-between text-sm mb-1">
                  <span>Presencia en Puertos (Latam)</span>
                  <span>95%</span>
                </div>
                <div class="h-2 bg-white/20 overflow-hidden">
                  <div class="h-full bg-accent w-[95%]"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between text-sm mb-1">
                  <span>Conexiones Aéreas (Global)</span>
                  <span>88%</span>
                </div>
                <div class="h-2 bg-white/20 overflow-hidden">
                  <div class="h-full bg-accent w-[88%]"></div>
                </div>
              </div>
              <div>
                <div class="flex justify-between text-sm mb-1">
                  <span>Red de Distribución Terrestre</span>
                  <span>100%</span>
                </div>
                <div class="h-2 bg-white/20 overflow-hidden">
                  <div class="h-full bg-accent w-full"></div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-white/10 p-6 text-center border border-white/10">
              <div class="text-3xl font-black mb-1">24/7</div>
              <p class="text-xs text-slate-200 uppercase tracking-widest font-bold">Monitoreo</p>
            </div>
            <div class="bg-white/10 p-6 text-center border border-white/10">
              <div class="text-3xl font-black mb-1">ISO</div>
              <p class="text-xs text-slate-200 uppercase tracking-widest font-bold">Certificaciones</p>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <div class="aspect-video bg-primary/50 border border-white/20 flex items-center justify-center group overflow-hidden">
            <img 
              alt="Red global de cobertura logística Serviworld Logistics en más de 50 países" 
              class="w-full h-full object-cover opacity-50 group-hover:scale-110 transition-transform duration-[20s]"
              src="/images/empresa/equipo-logistica-serviworld-colombia.jpg"
            />
            <div class="absolute inset-0 flex flex-col items-center justify-center p-8 text-center">
              <i class="fa-solid fa-earth-americas text-6xl text-accent mb-4"></i>
              <p class="text-lg font-black">Cobertura Global</p>
              <p class="text-sm text-slate-200">Presentes en los principales puertos y aeropuertos del mundo.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-slate-50">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-4xl md:text-5xl font-display font-black text-slate-900 mb-6">
        ¿Necesitas una <span class="text-primary">solución integral</span>?
      </h2>
      <p class="text-lg text-slate-600 mb-10">
        Combinamos nuestros servicios para crear la cadena de suministro perfecta para tu negocio.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contacto"
          class="inline-flex items-center justify-center gap-2 bg-primary text-white px-10 py-5 font-black uppercase tracking-widest text-sm hover:bg-accent transition-all shadow-xl"
        >
          <i class="fa-solid fa-phone"></i>
          Hablar con un Experto
        </a>
        <a 
          href="tel:+573114033806"
          class="inline-flex items-center justify-center gap-2 border-2 border-primary text-primary px-10 py-5 font-black uppercase tracking-widest text-sm hover:bg-primary hover:text-white transition-all"
        >
          <i class="fa-brands fa-whatsapp"></i>
          WhatsApp
        </a>
      </div>
    </div>
  </section>
</Layout>
